#define TERMINAL "st"
#define TERMCLASS "St"
const unsigned int borderpx  = 3;        /* border pixel of windows */
const unsigned int snap      = 25;       /* snap pixel */
const unsigned int gappih    = 20;       /* horiz inner gap between windows */
const unsigned int gappiv    = 10;       /* vert inner gap between windows */
const unsigned int gappoh    = 15;       /* horiz outer gap between windows and screen edge */
const unsigned int gappov    = 8;       /* vert outer gap between windows and screen edge */
const int swallowfloating    = 0;        /* 1 means swallow floating windows by default */
const int smartgaps          = 0;        /* 1 means no outer gap when there is only one window */
const int showbar            = 1;        /* 0 means no bar */
const int topbar             = 1;        /* 0 means bottom bar */
const int user_bh            = 40;       /* 0 means normal bar height, >1 means user bar height */
const char *fonts[]          = { "JetBrains Mono:style=Regular:size=16", "Symbols Nerd Font:style=2048-em:size=23","JoyPixels:size=16:antialias=true:autohint=true"};
